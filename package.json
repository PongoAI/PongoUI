{
  "name": "pongo-ui",
  "version": "0.0.0",
  "private": true,
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/PongoAI/pongo-ui"
  },
  "scripts": {
    "build": "nx run-many --target=build --all",
    "bundle-size": "nx run-many --target=bundle-size --all",
    "coverage": "nx run-many --target=coverage --all",
    "test": "nx run-many --target=test --all",
    "lint": "nx run-many --target=lint --all",
    "change": "beachball change --scope \"!packages/pongo-ui/*\"",
    "checkchange": "beachball check  --scope \"!packages/pongo-ui/*\" --changehint \"Run 'yarn change' to generate a change file\"",
    "publish:beachball": "beachball publish -b origin/master --access public -y",
    "format": "prettier --ignore-path .gitignore --write ./",
    "check-format": "prettier --ignore-path .gitignore --check ./",
    "prepare": "husky install",
    "build-storybook": "build-storybook",
    "chromatic": "cd apps && cd vr-tests && yarn chromatic"
  },
  "devDependencies": {
    "beachball": "^2.21.0",
    "@pongoai/eslint-plugin": "^0.0.72",
    "prettier": "^2.4.1",
    "eslint": "^7.32.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-typescript": "^16.1.0",
    "eslint-config-next": "^12.0.7",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-react": "^7.28.0",
    "eslint-plugin-react-hooks": "^4.3.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-cypress": "^2.10.3",
    "eslint-plugin-jest": "24.5.2",
    "@typescript-eslint/eslint-plugin": "^5.9.0",
    "@typescript-eslint/parser": "^5.9.0",
    "@fluentui/react-conformance": "^0.10.1",
    "@fluentui/react-conformance-griffel": "^9.0.0-beta.1",
    "@wojtekmaj/enzyme-adapter-react-17": "^0.6.3",
    "enzyme-adapter-react-16": "^1.15.0",
    "@testing-library/react": "^12.1.2",
    "@storybook/addon-a11y": "^6.4.15",
    "@storybook/addon-actions": "^6.4.15",
    "@storybook/addon-docs": "^6.4.15",
    "@storybook/addon-essentials": "^6.4.15",
    "@storybook/addon-knobs": "^6.4.0",
    "@storybook/addon-links": "^6.4.15",
    "@storybook/addons": "^6.4.15",
    "@storybook/api": "^6.4.15",
    "@storybook/builder-webpack5": "^6.4.15",
    "@storybook/core": "^6.4.15",
    "@storybook/react": "^6.4.15",
    "@storybook/theming": "^6.4.15",
    "husky": "^7.0.0",
    "@nrwl/cli": "^13.8.2",
    "@nrwl/jest": "^13.8.2",
    "@nrwl/nx-cloud": "^13.1.4",
    "@nrwl/tao": "^13.8.2",
    "@nrwl/workspace": "^13.8.2"
  },
  "workspaces": {
    "packages": [
      "apps/*",
      "scripts",
      "packages/*"
    ]
  }
}
